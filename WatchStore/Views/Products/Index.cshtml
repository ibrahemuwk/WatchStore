@model IEnumerable<WatchStore.Models.Products>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="~/Content/DesignContent/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/DesignContent/vendor/DataTable/Css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DesignContent/vendor/DataTable/Css/bootstrap.min.css" rel="stylesheet" />
    <style>
        #Products_wrapper{
            display: unset;
        }
        
        .form-inline label {
            display: unset;
        }
    </style>
</head>
<body>
<div style="margin-top:100px"></div>
<div class="container ">

   

    <h5>
        @Html.ActionLink("Create New", "Create", new {style = "text-decoration: none"})

    </h5>
    <table id="Products" class="table table-striped table-bordered ">
        <thead>
        <tr>
            <th>
                Brand
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Image
            </th>
            <th>
                Price
            </th>
            <th>
                Date
            </th>
            <th>
                Sale
            </th>
            <th>
                Quantity
            </th>
            <th> TOOLS</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td>
                    <img class="img-rounded" style="height: 50px" src="@Url.Action("UserPhotos", "Home", new {id = item.ProductId})"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductSale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductQuantity)
                </td>
                <td>
                    <span class="fa fa-edit btn btn-link btn-dark" style="text-decoration: none"> @Html.ActionLink("Edit", "Edit", new {id = item.ProductId, @class = "btn btn-link", style = "text-decoration: none"}) </span>
                    <span class="fa fa-book btn btn-link btn-dark" style="text-decoration: none"> @Html.ActionLink("Details", "Details", new {id = item.ProductId}) </span>
                    <span class="fa fa-times btn btn-link btn-dark" style="text-decoration: none">@Html.ActionLink("Delete", "Delete", new {id = item.ProductId})</span>
                </td>
            </tr>
        }
        </tbody>





    </table>

</div>
    <script src="~/Content/DesignContent/vendor/DataTable/Js/jquery.min.js"></script>
    <script src="~/Content/DesignContent/vendor/DataTable/Js/jquery.dataTables.min.js"></script>
    <script src="~/Content/DesignContent/vendor/DataTable/Js/dataTables.bootstrap.min.js"></script>
    <script src="~/Content/DesignContent/vendor/DataTable/Js/bootstrap.min.js"></script>
    <script>
        $(function () {
            $('#Products').DataTable({
                'paging': true,
                'lengthChange': true,
                'searching': true,
                'ordering': false,
                'info': true,
                'autoWidth': true,
                "pageLength": 3
            });

        })
    </script>
</body>
</html>
